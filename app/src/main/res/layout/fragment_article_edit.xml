<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <Button
        android:id="@+id/edit_saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:text="Сохранить"
        android:textColor="@color/White" />

    <EditText
        android:id="@+id/edit_editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Введите название..."
        android:inputType="textPersonName" />

    <LinearLayout
        android:id="@+id/edit_LinearLayoutImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/edit_addImageButton"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/PrimaryBlue"
            app:srcCompat="@android:drawable/ic_menu_add" />

        <ImageView
            android:id="@+id/edit_imageViewEdit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/edit_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/edit_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_editTextAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Введите описание..."
                android:inputType="textPersonName" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
